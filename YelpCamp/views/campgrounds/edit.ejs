<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Edit "<%= camp.name %>"</h1>
        <div style="width: 30%; margin: 20px auto;">
            <form method="POST" action="/campgrounds/<%= camp._id %>?_method=PUT">
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="name" name="camp[name]" value="<%= camp.name %>">
                </div>
                
                <div class="form-group">
                    <input class="form-control" type="number" value="<%= camp.price %>" name="camp[price]" min="0.01" step="0.01">
                </div>
                
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="image" name="camp[image]" value="<%= camp.image %>">
                </div>
                
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="description" name="camp[description]" value="<%= camp.description %>">
                </div>
                
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/campgrounds/<%= camp._id %>">Go back</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>